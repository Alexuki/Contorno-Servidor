{
    // Git auto-refresh settings
    "git.autorefresh": true,
    "git.autofetch": true,
    "git.enableStatusBarSync": true,
    
    // File watcher settings para WSL/Windows
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true
    },
    
    // Aumentar l√≠mite de archivos monitorizados
    "files.watcherInclude": [
        "**/*"
    ],
    
    // Polling para sistemas de archivos que no soportan eventos nativos (WSL)
    "git.useEditorAsCommitInput": false
}
